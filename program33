// Write a program to calculate the sum of first 15 natural numbers.

// while loop
#include<stdio.h>
int main()
{
	int i=1;
	int sum = 0;
	while(i<=15)
	{
	sum = sum+i;
	i++;
	}
	printf("%d",sum);
	return 0;
}

// do while loop
#include<stdio.h>
int main()
{
	int i=1;
	int sum = 0;
	do
	{
		sum = sum + i;
		i++;
	}
	while(i<=15);
	printf("%d",sum);
	return 0;
}

// for loop
#include<stdio.h>
int main()
{
	int i,sum;
	sum = 0;
	for(i=1;i<=15;i++)
	{
		sum = sum + i;
	}
	printf("%d",sum);
	return 0;
}

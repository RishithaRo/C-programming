//switch case
//if condition takes more amount of time as compared to switch
#include<stdio.h>
void main()
{
	int a;
	printf("Enter the value of a:");
	scanf("%d",&a);
	switch(a)
	{
		case 1:
			printf("hii..");
			break;
// if you not use the break statement, then all the case blocks will be executed from correct case satisfied.
		case 2:
			printf("hello..");
			break;
		case 3:
			printf("How are");
			break;
		case 4:
			printf("you");
			break;
		default:
			printf("Invalid..");
			break;
	}
}
